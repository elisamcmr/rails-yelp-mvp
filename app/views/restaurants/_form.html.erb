<%= simple_form_for(restaurant) do |f| %>
<div class="mb-3">
  <%= f.input :name %>
</div>

<div class="mb-3">
  <%= f.input :address %>
</div>

<div class="mb-3">
  <%= f.input :phone_number %>
</div>

<div class="mb-3">
  <%= f.input :category, collection: Restaurant::CATEGORY %>
</div>

<div class="d-flex justify-content-end">
  <%= f.submit %>
</div>


<% end %>
