<div class="d-flex justify-content-between align-items-center my-4 p-2 bg-light shadow-sm rounded">
  <h1 class="ms-3 fw-bold">Restaurants</h1>
  <%= link_to "Add a restaurant", new_restaurant_path, class: "me-3 btn btn-primary shadow-sm" %>
</div>

<div class="container mt-5">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm border-1">
          <div class="card-body d-flex flex-column">
            <!-- Name and Average Rating -->
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h4 class="card-title text-primary fw-bold" style="font-size: 1.5rem; margin-bottom: 0;">
                <%= restaurant.name %>
              </h4>

              <% if restaurant.reviews.any? %>
                <span class="badge bg-warning text-dark" style="font-size: 1rem; padding: 0.3rem 0.8rem;">
                  <%= number_with_precision(restaurant.reviews.average(:rating), precision: 1) %>/5 â­
                </span>
              <% else %>
                <span class="text-muted" style="font-size: 0.9rem;"><em>No reviews yet</em></span>
              <% end %>
            </div>

            <!-- Category -->
            <h5 class="text-success mb-3" style="font-size: 1.2rem; font-weight: 600;">
              <%= restaurant.category.capitalize %>
            </h5>

            <!-- Address and Phone -->
            <p class="card-text text-secondary mb-2">
              <strong>Address:</strong> <%= restaurant.address %> <br>
              <strong>Phone Number:</strong> <%= restaurant.phone_number %>
            </p>

            <!-- Button -->
            <div class="mt-auto d-flex justify-content-end">
              <%= link_to "See Restaurant", restaurant_path(restaurant), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
