<div class="d-flex justify-content-between align-items-center my-4 p-2 bg-light shadow-sm rounded">
<h1 class="ms-3 fw-bold">Restaurants</h1>
<%= link_to "Add a restaurant", new_restaurant_path, class: "me-3 btn btn-primary shadow-sm" %>
</div>

<div class="container my-5">
  <div class="card shadow-lg border-0">
    <div class="card-body p-4">
      <h2 class="card-title fw-bold mb-3"> <%= @restaurant.name %></h2>
      <h3 class="card-text text-secondary fs-5"><%= @restaurant.category.capitalize %></h3>

      <div class="mt-4 d-flex justify-content-start gap-3">

      <p>
      <strong>Address:</strong> <%= @restaurant.address %> <br>
      <strong>Phone Number:</strong> <%= @restaurant.phone_number %>
      </p>

      </div>
    </div>
  </div>

  <div class="card shadow-lg border-0 mt-3">
    <div class="card-body p-4">
      <h2 class="card-title fw-bold mb-3">Reviews</h2>

      <ul class="list-group">
          <% @reviews.each do |review| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
            Rating: <%= review.rating %>/5
            <%= review.content %>
            </li>
          <% end %>
      </ul>

      <div>
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-link text-decoration-none" %>
      </div>

      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-link text-decoration-none" %>
  </div>
</div>
